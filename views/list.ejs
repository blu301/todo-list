<%- include('header') %>

    <div id="heading" class="box">
        <h1><%= date %></h1>
    </div>
    
    <div class="box">
    
        <% items.forEach(item => { %>
            <div class="item">
                <input type="checkbox">
                <p><%= item%></p>
            </div>
        <% }) %>


        <form class="item" action="/" method="post">
            <input type="text" name="item" placeholder="Enter List Item">
            <input type="submit" class="button" value="+">
        </form>
    </div>


<%- include('footer') %>


